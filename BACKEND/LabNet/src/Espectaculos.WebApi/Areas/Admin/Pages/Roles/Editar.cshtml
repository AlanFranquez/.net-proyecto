@page "{id:guid}"
@model Espectaculos.WebApi.Areas.Admin.Pages.Roles.EditarModel
@{
    ViewData["Title"] = "Editar rol";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Editar rol</h1>
  <a asp-area="Admin" asp-page="/Roles/Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left"></i> Volver
  </a>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <form method="post">
      @Html.AntiForgeryToken()
      <div asp-validation-summary="All" class="text-danger small mb-3"></div>
      <input type="hidden" asp-for="Vm.RolId"/>

      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Tipo</label>
          <input asp-for="Vm.Tipo" class="form-control"/>
          <span asp-validation-for="Vm.Tipo" class="text-danger small"></span>
        </div>

        <div class="col-md-3">
          <label class="form-label">Prioridad</label>
          <input asp-for="Vm.Prioridad" type="number" class="form-control"/>
          <span asp-validation-for="Vm.Prioridad" class="text-danger small"></span>
        </div>

        <div class="col-md-3">
          <label class="form-label">Fecha asignado</label>
          <input asp-for="Vm.FechaAsignado" type="date" class="form-control"/>
          <span asp-validation-for="Vm.FechaAsignado" class="text-danger small"></span>
        </div>

        <div class="col-12">
          <label class="form-label">Usuarios</label>
          <select asp-for="Vm.UsuariosIDs"
                  class="form-select"
                  asp-items="Model.UsuarioOptions"
                  multiple>
          </select>
          <span class="form-text">
            Use Ctrl/Cmd + click para seleccionar múltiples usuarios.
          </span>
          <span asp-validation-for="Vm.UsuariosIDs" class="text-danger small"></span>
        </div>
      </div>

      <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit"><i class="bi bi-save"></i> Guardar</button>
        <a asp-area="Admin" asp-page="/Roles/Index" class="btn btn-outline-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
