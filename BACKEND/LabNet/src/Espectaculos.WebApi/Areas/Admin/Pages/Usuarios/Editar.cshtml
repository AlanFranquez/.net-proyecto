@page "{id:guid}"
@model Espectaculos.Backoffice.Areas.Admin.Pages.Usuarios.EditarModel
@{
    ViewData["Title"] = "Editar usuario";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Editar usuario</h1>
  <a asp-area="Admin" asp-page="/Usuarios/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <form method="post">
      @Html.AntiForgeryToken()
      <input type="hidden" asp-for="ModelVm.UsuarioId" />
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Nombre</label>
          <input asp-for="ModelVm.Nombre" class="form-control" />
          <span asp-validation-for="ModelVm.Nombre" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Apellido</label>
          <input asp-for="ModelVm.Apellido" class="form-control" />
          <span asp-validation-for="ModelVm.Apellido" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Email</label>
          <input asp-for="ModelVm.Email" class="form-control" />
          <span asp-validation-for="ModelVm.Email" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Documento</label>
          <input asp-for="ModelVm.Documento" class="form-control" />
          <span asp-validation-for="ModelVm.Documento" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Estado</label>
          <select asp-for="ModelVm.Estado" class="form-select"
                  asp-items="Html.GetEnumSelectList<Espectaculos.Domain.Enums.UsuarioEstado>()">
            <option value="">-- seleccionar --</option>
          </select>
        </div>
        <div class="col-md-6">
          <label class="form-label">Password (opcional)</label>
          <input asp-for="ModelVm.Password" class="form-control" type="password" />
        </div>
      </div>
      <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit"><i class="bi bi-save"></i> Guardar</button>
        <a asp-area="Admin" asp-page="/Usuarios/Index" class="btn btn-outline-secondary">Cancelar</a>
      </div>
      <div class="col-12">
        <label class="form-label">Roles</label>
        <select asp-for="ModelVm.RolesIDs"
                class="form-select"
                asp-items="Model.RolesOptions"
                multiple>
        </select>
        <span class="form-text">Use Ctrl/Cmd + click para seleccionar m√∫ltiples roles.</span>
        <span asp-validation-for="ModelVm.RolesIDs" class="text-danger small"></span>
      </div>

    </form>
  </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
