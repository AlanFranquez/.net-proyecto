@page
@model Espectaculos.Backoffice.Areas.Admin.Pages.Espacios.CrearModel
@{
    ViewData["Title"] = "Crear espacio";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Crear espacio</h1>
  <a asp-area="Admin" asp-page="/Espacios/Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left"></i> Volver
  </a>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <form method="post">
      @Html.AntiForgeryToken()
      <div asp-validation-summary="All" class="text-danger small mb-3"></div>

      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Nombre</label>
          <input asp-for="Vm.Nombre" class="form-control"/>
          <span asp-validation-for="Vm.Nombre" class="text-danger small"></span>
        </div>

        <div class="col-md-2 d-flex align-items-center">
          <div class="form-check mt-4">
            <input asp-for="Vm.Activo" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="Vm.Activo">Activo</label>
          </div>
        </div>

        <div class="col-md-2">
          <label class="form-label">Tipo</label>
          <select asp-for="Vm.Tipo" class="form-select" asp-items="Model.Tipos"></select>
          <span asp-validation-for="Vm.Tipo" class="text-danger small"></span>
        </div>

        <div class="col-md-2">
          <label class="form-label">Modo</label>
          <select asp-for="Vm.Modo" class="form-select" asp-items="Model.Modos"></select>
          <span asp-validation-for="Vm.Modo" class="text-danger small"></span>
        </div>

        <div class="col-12">
          <label class="form-label">Reglas de acceso</label>
          <select asp-for="Vm.ReglaIds"
                  class="form-select"
                  asp-items="Model.ReglaOptions"
                  multiple>
          </select>
          <span class="form-text"></span>
        </div>

        <div class="col-12">
          <label class="form-label">Beneficios</label>
          <select asp-for="Vm.BeneficioIds"
                  class="form-select"
                  asp-items="Model.BeneficioOptions"
                  multiple>
          </select>
          <span class="form-text"></span>
        </div>
      </div>

      <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit"><i class="bi bi-plus-circle"></i> Crear</button>
        <a asp-area="Admin" asp-page="/Espacios/Index" class="btn btn-outline-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
