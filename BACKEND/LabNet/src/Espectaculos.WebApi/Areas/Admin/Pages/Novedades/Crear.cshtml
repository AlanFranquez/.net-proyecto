@page
@model Espectaculos.WebApi.Areas.Admin.Pages.Novedades.CrearModel
@{
    ViewData["Title"] = "Nueva novedad";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Nueva novedad</h1>
    <a asp-area="Admin" asp-page="/Novedades/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
</div>

<form method="post" class="card shadow-sm border-0">
    @Html.AntiForgeryToken()
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Título</label>
            <input asp-for="Input.Titulo" class="form-control" />
            <span asp-validation-for="Input.Titulo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Contenido</label>
            <textarea asp-for="Input.Contenido" rows="6" class="form-control"></textarea>
        </div>
        <div class="row g-2">
            <div class="col-lg-4">
                <label class="form-label">Tipo</label>
                <select asp-for="Input.Tipo" class="form-select"
                        asp-items="Model.TipoOptions"></select>
            </div>
            <div class="col-lg-4">
                <label class="form-label">Publicado desde (UTC)</label>
                <input asp-for="Input.DesdeUtc" type="datetime-local" class="form-control" />
            </div>
            <div class="col-lg-4">
                <label class="form-label">Publicado hasta (UTC)</label>
                <input asp-for="Input.HastaUtc" type="datetime-local" class="form-control" />
            </div>
        </div>
    </div>
    <div class="card-footer bg-white d-flex gap-2">
        <button type="submit" class="btn btn-primary"><i class="bi bi-check2"></i> Guardar</button>
        <a asp-area="Admin" asp-page="/Novedades/Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }