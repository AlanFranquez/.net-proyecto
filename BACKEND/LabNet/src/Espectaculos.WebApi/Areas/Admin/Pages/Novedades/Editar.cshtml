@page "{id:guid}"
@model Espectaculos.WebApi.Areas.Admin.Pages.Novedades.EditarModel
@{
    ViewData["Title"] = "Editar novedad";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Editar novedad</h1>
  <div class="d-flex gap-2">
    @if (!Model.Publicado)
    {
      <form method="post" asp-page-handler="Publicar">
        @Html.AntiForgeryToken()
        <button class="btn btn-success"><i class="bi bi-upload"></i> Publicar</button>
      </form>
    }
    else
    {
      <form method="post" asp-page-handler="Despublicar">
        @Html.AntiForgeryToken()
        <button class="btn btn-warning"><i class="bi bi-slash-circle"></i> Despublicar</button>
      </form>
    }
    <a asp-area="Admin" asp-page="/Novedades/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
  </div>
</div>

@if (TempData["Ok"] is string ok) {
  <div class="alert alert-success alert-dismissible fade show"><i class="bi bi-check-circle"></i> @ok
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}
@if (TempData["Error"] is string err) {
  <div class="alert alert-danger alert-dismissible fade show"><i class="bi bi-exclamation-triangle"></i> @err
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}

<form method="post" class="card shadow-sm border-0">
  @Html.AntiForgeryToken()
  <div class="card-body">
    <div class="mb-3">
      <label class="form-label">Título</label>
      <input asp-for="Input.Titulo" class="form-control" />
      <span asp-validation-for="Input.Titulo" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Contenido</label>
      <textarea asp-for="Input.Contenido" rows="8" class="form-control"></textarea>
    </div>
    <div class="row g-2">
      <div class="col-lg-4">
        <label class="form-label">Tipo</label>
        <select asp-for="Input.Tipo" class="form-select"
                asp-items="Model.TipoOptions"></select>
      </div>
      <div class="col-lg-4">
        <label class="form-label">Publicado desde (UTC)</label>
        <input asp-for="Input.PublicadoDesdeUtc" type="datetime-local" class="form-control" />
      </div>
      <div class="col-lg-4">
        <label class="form-label">Publicado hasta (UTC)</label>
        <input asp-for="Input.PublicadoHastaUtc" type="datetime-local" class="form-control" />
      </div>
    </div>
  </div>
  <div class="card-footer bg-white d-flex gap-2">
    <button type="submit" class="btn btn-primary"><i class="bi bi-check2"></i> Guardar cambios</button>
    <a asp-area="Admin" asp-page="/Novedades/Index" class="btn btn-outline-secondary">Cancelar</a>
  </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
