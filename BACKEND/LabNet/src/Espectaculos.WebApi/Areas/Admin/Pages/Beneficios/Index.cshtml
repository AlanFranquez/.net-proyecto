@page
@model Espectaculos.WebApi.Areas.Admin.Pages.Beneficios.IndexModel
@{
    ViewData["Title"] = "Beneficios";
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h3 mb-0">Beneficios</h1>
    <small class="text-muted">Listado, búsqueda y navegación</small>
  </div>
  <a asp-area="Admin" asp-page="/Beneficios/Crear" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Nuevo
  </a>
</div>

@if (TempData["Ok"] is string ok) {
  <div class="alert alert-success alert-dismissible fade show">
    <i class="bi bi-check-circle"></i> @ok
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}
@if (TempData["Error"] is string err) {
  <div class="alert alert-danger alert-dismissible fade show">
    <i class="bi bi-exclamation-triangle"></i> @err
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
}

<form method="get" class="card mb-3 shadow-sm border-0">
  <div class="card-body">
    <div class="row g-2 align-items-end">
      <div class="col-lg-6">
        <label class="form-label">Buscar</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-search"></i></span>
          <input class="form-control" name="q" value="@Model.Q" placeholder="Nombre o descripción..." />
        </div>
      </div>
      <div class="col-lg-2">
        <label class="form-label">Por página</label>
        <select class="form-select" name="pageSize" onchange="this.form.submit()">
          <option value="10" selected="@(Model.PageSize==10)">10</option>
          <option value="20" selected="@(Model.PageSize==20)">20</option>
          <option value="50" selected="@(Model.PageSize==50)">50</option>
        </select>
      </div>
      <div class="col-lg-4 d-flex gap-2">
        <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i> Buscar</button>
        <a class="btn btn-outline-secondary"
           href="@Url.Page(null, new { q = (string?)null, page = 1, pageSize = Model.PageSize })">
          <i class="bi bi-x-circle"></i> Limpiar
        </a>
      </div>
    </div>
  </div>
</form>

<div class="card shadow-sm border-0">
  <div class="card-header bg-white d-flex justify-content-between">
    <strong><i class="bi bi-gift"></i> Beneficios</strong>
    <span class="text-muted small">Página @Model.Paged.Page de @Model.Paged.TotalPages · Total @Model.Paged.TotalCount</span>
  </div>

  <div class="card-body p-0">
    @if (Model.Paged.TotalCount == 0)
    {
      <div class="p-4">
        <div class="alert alert-info mb-0">No hay resultados.</div>
      </div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table table-hover table-striped mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th>Nombre</th>
              <th>Tipo</th>
              <th>Vigencia</th>
              <th>Cupo total</th>
              <th>Biometría</th>
              <th class="text-end" style="width:240px;">Acciones</th>
            </tr>
          </thead>
          <tbody>
          @foreach (var b in Model.Paged.Items)
          {
            <tr>
              <td>@b.Nombre</td>
              <td>@b.Tipo</td>
              <td>@(b.VigenciaInicio?.ToString("yyyy-MM-dd") ?? "∞") – @(b.VigenciaFin?.ToString("yyyy-MM-dd") ?? "∞")</td>
              <td>@(b.CupoTotal?.ToString() ?? "—")</td>
              <td>
                @(b.RequiereBiometria == true ? "Sí" : b.RequiereBiometria == false ? "No" : "—")
              </td>
              <td class="text-end">
                <a asp-area="Admin" asp-page="/Beneficios/Editar" asp-route-id="@b.Id"
                   class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i> Editar</a>
              </td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
