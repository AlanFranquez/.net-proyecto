@page "{id:guid}"
@model Espectaculos.WebApi.Areas.Admin.Pages.Credenciales.EditarModel
@using Espectaculos.Domain.Enums
@{
    ViewData["Title"] = "Editar credencial";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Editar credencial</h1>
    <a asp-area="Admin" asp-page="/Credenciales/Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <input type="hidden" asp-for="Vm.CredencialId" />
            <input type="hidden" asp-for="Vm.UsuarioId" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Usuario</label>
                    <input type="text" class="form-control" value="@Model.UsuarioDisplay" disabled />
                    <div class="form-text">No se puede cambiar el usuario de una credencial.</div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Tipo</label>
                    <select asp-for="Vm.Tipo"
                            asp-items="Html.GetEnumSelectList<CredencialTipo>()"
                            class="form-select"></select>
                    <span asp-validation-for="Vm.Tipo" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Estado</label>
                    <select asp-for="Vm.Estado"
                            asp-items="Html.GetEnumSelectList<CredencialEstado>()"
                            class="form-select"></select>
                    <span asp-validation-for="Vm.Estado" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">ID Criptográfico</label>
                    <input asp-for="Vm.IdCriptografico" class="form-control" />
                    <span asp-validation-for="Vm.IdCriptografico" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Fecha de emisión</label>
                    <input asp-for="Vm.FechaEmision" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Vm.FechaEmision" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Fecha de expiración</label>
                    <input asp-for="Vm.FechaExpiracion" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Vm.FechaExpiracion" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-area="Admin" asp-page="/Credenciales/Index" class="btn btn-outline-secondary">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
