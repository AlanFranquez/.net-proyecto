@page
@model Espectaculos.WebApi.Areas.Admin.Pages.TestEventos.IndexModel
@using Espectaculos.Domain.Enums
@{
    ViewData["Title"] = "Tester de eventos de acceso";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Tester de eventos de acceso</h1>
    <a asp-area="Admin" asp-page="/Dashboard/Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver al dashboard
    </a>
</div>

<p class="text-muted">
    Usá este formulario para crear <code>EventoAcceso</code> manualmente y verificar
    que el tablero de <a asp-area="Admin" asp-page="/Reportes/Index">Reportes</a> 
    se actualiza en tiempo real.
</p>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">
        @Model.Message
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="row g-3">

                <div class="col-md-4">
                    <label asp-for="Input.UsuarioId" class="form-label">Usuario</label>
                    <select asp-for="Input.UsuarioId"
                            asp-items="Model.UsuarioOptions"
                            class="form-select">
                        <option value="">-- seleccionar usuario --</option>
                    </select>
                    <span asp-validation-for="Input.UsuarioId" class="text-danger small"></span>
                    <div class="form-text">
                        Se usará la credencial asignada a este usuario.
                    </div>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.EspacioId" class="form-label">Espacio</label>
                    <select asp-for="Input.EspacioId"
                            asp-items="Model.EspacioOptions"
                            class="form-select">
                        <option value="">-- seleccionar espacio --</option>
                    </select>
                    <span asp-validation-for="Input.EspacioId" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.MomentoDeAcceso" class="form-label">Momento de acceso</label>
                    <input asp-for="Input.MomentoDeAcceso" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Input.MomentoDeAcceso" class="text-danger small"></span>
                    <div class="form-text">
                        Si lo dejás vacío se usa la hora actual (UTC).
                    </div>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.Resultado" class="form-label">Resultado</label>
                    <select asp-for="Input.Resultado"
                            asp-items="Html.GetEnumSelectList<AccesoTipo>()"
                            class="form-select">
                    </select>
                    <span asp-validation-for="Input.Resultado" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.Modo" class="form-label">Modo</label>
                    <select asp-for="Input.Modo"
                            asp-items="Html.GetEnumSelectList<Modo>()"
                            class="form-select">
                    </select>
                    <span asp-validation-for="Input.Modo" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.Motivo" class="form-label">Motivo (opcional)</label>
                    <input asp-for="Input.Motivo" class="form-control" />
                    <span asp-validation-for="Input.Motivo" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Input.Firma" class="form-label">Firma (opcional)</label>
                    <input asp-for="Input.Firma" class="form-control" />
                    <span asp-validation-for="Input.Firma" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-bug"></i> Crear evento de prueba
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
