@page
@model Espectaculos.Backoffice.Areas.Admin.Pages.Roles.IndexModel
@using System.Linq
@{
    ViewData["Title"] = "Roles";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Roles</h1>
    <a asp-area="Admin" asp-page="/Roles/Crear" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo rol
    </a>
</div>

@if (TempData["Ok"] is string ok)
{
    <div class="alert alert-success py-2">@ok</div>
}

<table class="table table-sm align-middle">
    <thead>
    <tr>
        <th>Tipo</th>
        <th>Prioridad</th>
        <th>Fecha asignado</th>
        <th>Usuarios</th>
        <th style="width:160px"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var r in Model.Roles)
    {
        <tr>
            <td>@r.Tipo</td>
            <td>@r.Prioridad</td>
            <td>@(r.FechaAsignado?.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture))</td>
            <td>@(r.UsuariosIDs?.Count() ?? 0)</td>
            <td class="text-end">
                <a asp-area="Admin" asp-page="/Roles/Editar" asp-route-id="@r.RolId" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@r.RolId" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Eliminar rol?')">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>