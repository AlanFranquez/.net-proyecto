@page
@model Espectaculos.Backoffice.Areas.Admin.Pages.Beneficios.CrearModel
@{
    ViewData["Title"] = "Crear beneficio";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Crear beneficio</h1>
    <a asp-area="Admin" asp-page="/Beneficios/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
</div>


<div class="card shadow-sm border-0">
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre</label>
                    <input asp-for="Vm.Nombre" class="form-control" />
                    <span asp-validation-for="Vm.Nombre" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Tipo</label>
                    <select asp-for="Vm.Tipo" class="form-select" asp-items="Html.GetEnumSelectList<Espectaculos.Domain.Enums.BeneficioTipo>()">
                        <option value="">-- seleccionar --</option>
                    </select>
                    <span asp-validation-for="Vm.Tipo" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">Descripción</label>
                    <textarea asp-for="Vm.Descripcion" class="form-control" rows="3"></textarea>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Vigencia inicio</label>
                    <input asp-for="Vm.VigenciaInicio" class="form-control" type="date" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Vigencia fin</label>
                    <input asp-for="Vm.VigenciaFin" class="form-control" type="date" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Cupo total</label>
                    <input asp-for="Vm.CupoTotal" class="form-control" type="number" min="0" />
                </div>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary" type="submit"><i class="bi bi-save"></i> Guardar</button>
                <a asp-area="Admin" asp-page="/Beneficios/Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts { <partial name="_ValidationScriptsPartial" /> }