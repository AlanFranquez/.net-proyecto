@page
@model Espectaculos.Backoffice.Areas.Admin.Pages.Usuarios.CrearModel
@{
    ViewData["Title"] = "Crear usuario";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Crear usuario</h1>
  <a asp-area="Admin" asp-page="/Usuarios/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <form method="post">
      @Html.AntiForgeryToken()
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Nombre</label>
          <input asp-for="ModelVm.Nombre" class="form-control"/>
          <span asp-validation-for="ModelVm.Nombre" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Apellido</label>
          <input asp-for="ModelVm.Apellido" class="form-control"/>
          <span asp-validation-for="ModelVm.Apellido" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Email</label>
          <input asp-for="ModelVm.Email" class="form-control"/>
          <span asp-validation-for="ModelVm.Email" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Documento</label>
          <input asp-for="ModelVm.Documento" class="form-control"/>
          <span asp-validation-for="ModelVm.Documento" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
          <label class="form-label">Password</label>
          <input asp-for="ModelVm.Password" class="form-control" type="password"/>
          <span asp-validation-for="ModelVm.Password" class="text-danger small"></span>
        </div>
        <div class="col-12">
          <label class="form-label">Roles (opcional, IDs separados por coma)</label>
          <input asp-for="ModelVm.RolesComma" class="form-control" placeholder="GUID1, GUID2, ..." />
        </div>
      </div>
      <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit"><i class="bi bi-plus-circle"></i> Crear</button>
        <a asp-area="Admin" asp-page="/Usuarios/Index" class="btn btn-outline-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
