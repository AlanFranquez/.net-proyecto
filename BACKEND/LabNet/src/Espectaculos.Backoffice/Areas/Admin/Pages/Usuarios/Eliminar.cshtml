@page "{id:guid}"
@model Espectaculos.Backoffice.Areas.Admin.Pages.Usuarios.EliminarModel
@{
    ViewData["Title"] = "Eliminar usuario";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0 text-danger"><i class="bi bi-trash"></i> Eliminar usuario</h1>
    <a asp-area="Admin" asp-page="/Usuarios/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
</div>

<div class="card border-danger shadow-sm">
    <div class="card-header bg-danger text-white">
        Confirmación requerida
    </div>
    <div class="card-body">
        <p>¿Estás seguro de eliminar este usuario?</p>
        <ul class="mb-3">
            <li><strong>Nombre:</strong> @Model.NombreCompleto</li>
            <li><strong>Email:</strong> @Model.Email</li>
            <li><strong>Documento:</strong> @Model.Documento</li>
        </ul>

        <form method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
            <a asp-area="Admin" asp-page="/Usuarios/Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>