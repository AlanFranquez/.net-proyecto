# =========================
# Stage 1: build .NET backend
# =========================
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY src/Espectaculos.Domain/Espectaculos.Domain.csproj src/Espectaculos.Domain/
COPY src/Espectaculos.Application/Espectaculos.Application.csproj src/Espectaculos.Application/
COPY src/Espectaculos.Infrastructure/Espectaculos.Infrastructure.csproj src/Espectaculos.Infrastructure/
COPY src/Espectaculos.WebApi/Espectaculos.WebApi.csproj src/Espectaculos.WebApi/

RUN dotnet restore src/Espectaculos.WebApi/Espectaculos.WebApi.csproj

COPY . .
RUN dotnet publish src/Espectaculos.WebApi/Espectaculos.WebApi.csproj -c Release -o /app/publish


# =========================
# Stage 2: runtime + nginx
# =========================
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

COPY --from=build /app/publish .

# listen on 8080 (compose maps host 8080)
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080
# Exponer puertos HTTP y HTTPS
EXPOSE 80 443

ENTRYPOINT ["dotnet", "Espectaculos.WebApi.dll"]
