<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNetCredenciales.Views.NavbarFuncionario">
    <ContentView.Resources>
        <ResourceDictionary>
            <x:Double x:Key="NavIconSize">36</x:Double>
            <Color x:Key="NavBackground">#FFFFFF</Color>
            <Style x:Key="NavIconButton" TargetType="ImageButton">
                <Setter Property="WidthRequest" Value="{StaticResource NavIconSize}" />
                <Setter Property="HeightRequest" Value="{StaticResource NavIconSize}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="Aspect" Value="AspectFit" />
                <Setter Property="Margin" Value="6,0" />
                <Setter Property="Opacity" Value="0.95" />
            </Style>
            <Style x:Key="NavButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2196F3" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="FontSize" Value="14" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <Frame Padding="8"
           CornerRadius="12"
           HasShadow="True"
           BackgroundColor="{StaticResource NavBackground}"
           HorizontalOptions="Fill"
           VerticalOptions="End"
           Margin="12"
           HeightRequest="72">
        <Grid ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Center"
              HorizontalOptions="Fill">

            <!-- Left side: Mode switch button (only visible if user has Usuario role) -->
            <Button x:Name="EspacioButton"
                    Grid.Column="0"
                    Text="Ir a Espacios"
                    IsVisible="{Binding HasUsuarioRole}"
                    Command="{Binding GoToEspaciosCommand}"
                    Style="{StaticResource NavButton}"
                    HorizontalOptions="Start"
                    VerticalOptions="Center" />

            <!-- Center: Role label -->
            <Label x:Name="RoleLabel"
                   Grid.Column="1"
                   Text="Rol: Funcionario"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="16" />

            <!-- Right side: Navigation buttons for Funcionario -->
            <StackLayout Orientation="Horizontal"
                        Grid.Column="2"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Spacing="8">
                
                <!-- Scan QR button -->
                <ImageButton Source="qrcode.png"
                            Style="{StaticResource NavIconButton}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="scan"
                            AutomationId="scanButton" />

                <!-- Logout button -->
                <ImageButton Source="logout.png"
                            Style="{StaticResource NavIconButton}"
                            Command="{Binding LogoutCommand}"
                            CommandParameter="logout" />
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>