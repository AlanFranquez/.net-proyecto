<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNetCredenciales.Views.Navbar">
    <Grid Padding="10"
          BackgroundColor="White"
          ColumnDefinitions="*,*,*"
          VerticalOptions="End"
          HeightRequest="60">

        <ImageButton Source="widget.png"
                     BackgroundColor="Transparent"
                     WidthRequest="32"
                     HeightRequest="32"
                     Command="{Binding NavigateCommand}"
                     CommandParameter="eventos"
                     Grid.Column="1"
                     HorizontalOptions="Center" />

        <ImageButton Source="credencial.png"
             BackgroundColor="Transparent"
             WidthRequest="32"
             HeightRequest="32"
             Command="{Binding NavigateCommand}"
             CommandParameter="credencial"
             Grid.Column="0"
             HorizontalOptions="Center" />

        <ImageButton Source="historial.png"
             BackgroundColor="Transparent"
             WidthRequest="32"
             HeightRequest="32"
             Command="{Binding NavigateCommand}"
             CommandParameter="eventos"
             Grid.Column="3"
             HorizontalOptions="Center" />
    </Grid>
</ContentView>