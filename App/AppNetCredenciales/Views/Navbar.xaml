<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNetCredenciales.Views.Navbar">
    <ContentView.Resources>
        <ResourceDictionary>
            <x:Double x:Key="NavIconSize">36</x:Double>
            <Color x:Key="NavBackground">#FFFFFF</Color>
            <Style x:Key="NavIconButton" TargetType="ImageButton">
                <Setter Property="WidthRequest" Value="{StaticResource NavIconSize}" />
                <Setter Property="HeightRequest" Value="{StaticResource NavIconSize}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="Aspect" Value="AspectFit" />
                <Setter Property="Margin" Value="6,0" />
                <Setter Property="Opacity" Value="0.95" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <Frame Padding="8"
           CornerRadius="12"
           HasShadow="True"
           BackgroundColor="{StaticResource NavBackground}"
           HorizontalOptions="Fill"
           VerticalOptions="End"
           Margin="12"
           HeightRequest="72">
        <Grid ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Center"
              HorizontalOptions="Fill">

           

            <!-- Regular user navigation icons -->
            <StackLayout Grid.Column="2"
                         Orientation="Horizontal"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Spacing="8">

              
       
                <!-- Credential Button -->
                <ImageButton Source="qrcode.png"
     Style="{StaticResource NavIconButton}"
     Command="{Binding NavigateCommand}"
     CommandParameter="scan" IsVisible="{Binding isFuncionario}"/>

                <!-- Credential Button -->
                <ImageButton Source="idcard.png"
              Style="{StaticResource NavIconButton}"
              Command="{Binding NavigateCommand}"
              CommandParameter="credencial"/>

                <!-- Spaces Button -->
                <ImageButton Source="calendarevents.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="espacio"/>

                <!-- History Button -->
                <ImageButton Source="clock.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="historial"/>

                <!-- Logout Button -->
                <ImageButton Source="logout.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding LogoutCommand}" />
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>