<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNetCredenciales.Views.Navbar">
    <ContentView.Resources>
        <ResourceDictionary>
            <x:Double x:Key="NavIconSize">36</x:Double>
            <Color x:Key="NavBackground">#FFFFFF</Color>
            <Style x:Key="NavIconButton" TargetType="ImageButton">
                <Setter Property="WidthRequest" Value="{StaticResource NavIconSize}" />
                <Setter Property="HeightRequest" Value="{StaticResource NavIconSize}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="Aspect" Value="AspectFit" />
                <Setter Property="Margin" Value="6,0" />
                <Setter Property="Opacity" Value="0.95" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

     <Frame Padding="8"
           CornerRadius="12"
           HasShadow="True"
           BackgroundColor="{StaticResource NavBackground}"
           HorizontalOptions="Fill"
           VerticalOptions="End"
           Margin="12"
           HeightRequest="72">
        <Grid ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Center"
              HorizontalOptions="Fill">
            
            <!-- Left side QR button only visible for Funcionario -->
            <Grid Grid.Column="0" WidthRequest="120" HeightRequest="48" HorizontalOptions="Start" VerticalOptions="Center">
                <ImageButton Source="qrcode.png"
                            Style="{StaticResource NavIconButton}"
                            IsVisible="{Binding IsFuncionario}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="scan"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            AutomationId="scanLogoButton" />
            </Grid>

            <!-- Default navigation for regular users -->
            <StackLayout x:Name="DefaultNav"
                         Orientation="Horizontal"
                         Grid.Column="2"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Spacing="8" 
                         Padding="0"
                         IsVisible="{Binding IsFuncionario, Converter={StaticResource InvertedBoolConverter}}">
                <ImageButton Source="idcard.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="credencial" />
                <ImageButton Source="calendarevents.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="espacio" />
                <ImageButton Source="clock.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="historial" />
                <ImageButton Source="logout.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding LogoutCommand}"
                             CommandParameter="logout" />
            </StackLayout>

            <!-- Navigation for Funcionario users -->
            <StackLayout x:Name="FuncionarioNav"
                         Orientation="Horizontal"
                         Grid.Column="2"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Spacing="8"
                         Padding="0"
                         IsVisible="{Binding IsFuncionario}">
                <ImageButton Source="logout.png"
                             Style="{StaticResource NavIconButton}"
                             Command="{Binding LogoutCommand}"
                             CommandParameter="logout" />
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>