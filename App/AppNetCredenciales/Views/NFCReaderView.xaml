<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AppNetCredenciales.Views"
             x:Class="AppNetCredenciales.Views.NFCReaderView"
             Title="Lector NFC">

    <Grid RowDefinitions="Auto,*,Auto" Padding="0">
        
        <!-- Header con información -->
        <Frame Grid.Row="0" 
               BackgroundColor="#2196F3" 
               CornerRadius="0" 
               Padding="20"
               HasShadow="True">
            <VerticalStackLayout Spacing="5">
                <Label Text="Lector NFC - Modo Tótem" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Acerca el dispositivo del usuario para leer su credencial NFC" 
                       FontSize="14" 
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Contenido central -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
                
                <!-- Animación NFC -->
                <Frame x:Name="NfcAnimationFrame"
                       BackgroundColor="#E3F2FD"
                       CornerRadius="150"
                       HeightRequest="300"
                       WidthRequest="300"
                       HorizontalOptions="Center"
                       Padding="0"
                       HasShadow="True">
                    <Grid>
                        <Label Text="NFC" 
                               FontSize="60"
                               FontAttributes="Bold"
                               TextColor="#1976D2"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        <Label x:Name="WaveLabel1"
                               Text="~~~~~"
                               FontSize="40"
                               Opacity="0"
                               TextColor="#1976D2"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TranslationX="-100"/>
                        <Label x:Name="WaveLabel2"
                               Text="~~~~~"
                               FontSize="40"
                               Opacity="0"
                               TextColor="#1976D2"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TranslationX="-100"/>
                        <Label x:Name="WaveLabel3"
                               Text="~~~~~"
                               FontSize="40"
                               Opacity="0"
                               TextColor="#1976D2"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TranslationX="-100"/>
                    </Grid>
                </Frame>

                <!-- Estado -->
                <Label x:Name="StatusLabel"
                       Text="Presiona 'Iniciar Lectura' para comenzar"
                       FontSize="18"
                       HorizontalTextAlignment="Center"
                       TextColor="#666"
                       FontAttributes="Italic"/>

                <!-- Información del tag leído -->
                <Frame x:Name="TagInfoFrame"
                       IsVisible="False"
                       BackgroundColor="#E8F5E9"
                       BorderColor="#4CAF50"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Tag NFC Detectado"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#2E7D32"/>
                        
                        <BoxView HeightRequest="1" BackgroundColor="#C8E6C9"/>
                        
                        <Label Text="ID del Tag:"
                               FontSize="14"
                               TextColor="#666"
                               FontAttributes="Bold"/>
                        <Label x:Name="TagIdLabel"
                               FontSize="16"
                               TextColor="#333"
                               FontFamily="Courier New"/>
                        
                        <Label Text="Datos:"
                               FontSize="14"
                               TextColor="#666"
                               FontAttributes="Bold"
                               Margin="0,10,0,0"/>
                        <Label x:Name="TagDataLabel"
                               FontSize="16"
                               TextColor="#333"
                               LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botones de acción -->
                <VerticalStackLayout Spacing="15">
                    <Button x:Name="StartReadButton"
                            Text="Iniciar Lectura NFC"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HeightRequest="60"
                            CornerRadius="15"
                            Clicked="OnStartReadClicked"
                            HorizontalOptions="Fill"/>
                    
                    <Button x:Name="StopReadButton"
                            Text="Detener Lectura"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HeightRequest="60"
                            CornerRadius="15"
                            Clicked="OnStopReadClicked"
                            IsVisible="False"
                            HorizontalOptions="Fill"/>
                    
                    <Button x:Name="ProcessButton"
                            Text="Procesar Credencial"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HeightRequest="60"
                            CornerRadius="15"
                            Clicked="OnProcessClicked"
                            IsVisible="False"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>

                <!-- Instrucciones -->
                <Frame BackgroundColor="#FFF3E0"
                       BorderColor="#FF9800"
                       CornerRadius="10"
                       Padding="15">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Instrucciones"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#E65100"/>
                        <Label Text="1. Presiona 'Iniciar Lectura NFC'"
                               FontSize="14"
                               TextColor="#666"/>
                        <Label Text="2. Pide al usuario que acerque su dispositivo o tarjeta NFC"
                               FontSize="14"
                               TextColor="#666"/>
                        <Label Text="3. El sistema detectará y procesará la credencial automáticamente"
                               FontSize="14"
                               TextColor="#666"/>
                        <Label Text="4. Verifica que el dispositivo tenga NFC activado"
                               FontSize="14"
                               TextColor="#666"
                               FontAttributes="Italic"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Navbar del Funcionario -->
        <views:NavbarFuncionario Grid.Row="2" 
                                 VerticalOptions="End"/>
    </Grid>

</ContentPage>
