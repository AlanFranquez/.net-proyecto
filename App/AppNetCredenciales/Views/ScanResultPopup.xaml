<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="AppNetCredenciales.Views.ScanResultPopup"
    Size="320,260"
    CanBeDismissedByTappingOutsideOfPopup="True"
    Color="#00000040">
    <!-- fondo semitransparente -->

    <Frame 
        BackgroundColor="White"
        CornerRadius="20"
        Padding="25"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        HasShadow="True">

        <VerticalStackLayout Spacing="15" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Icono de estado -->
            <Border BackgroundColor="{Binding IconBackgroundColor}" StrokeShape="RoundRectangle 50" WidthRequest="70" HeightRequest="70" HorizontalOptions="Center">
                <Label Text="{Binding IconSymbol}" FontSize="38" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White"/>
            </Border>

            <!-- TÃ­tulo -->
            <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="20" TextColor="#333" HorizontalOptions="Center"/>

            <!-- Mensaje -->
            <Label x:Name="MessageLabel" FontSize="15" TextColor="#666" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

            

        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
