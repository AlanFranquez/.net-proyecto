<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AppNetCredenciales.Views"
             x:Class="AppNetCredenciales.Views.HistorialView"
             Title="Historial" BackgroundColor="White">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="10">

                <!-- HEADER: always visible -->
                <Label Text="Historial de accesos"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"
                       IsVisible="True" />

                <CollectionView x:Name="AccesosCollection"
                                ItemsSource="{Binding Accesos}"
                                SelectionMode="Single"
                                SelectionChanged="OnAccesoSelected">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="20" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="clock.svg" WidthRequest="48" HeightRequest="48" />
                            <Label Text="No hay registros aÃºn" FontSize="16" TextColor="Gray" HorizontalOptions="Center" />
                            <Label Text="AquÃ­ verÃ¡s tus accesos cuando se registren" FontSize="12" TextColor="Gray" HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15"
                                   Margin="1"
                                   BorderColor="{AppThemeBinding Light='#ccc', Dark='#555'}"
                                   BackgroundColor="{AppThemeBinding Light='White', Dark='#1e1e1e'}"
                                   CornerRadius="12"
                                   HasShadow="True">

                                <!-- Style changes depending on ResultadoStr -->
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame" Binding="{Binding ResultadoStr}" Value="Rechazada">
                                        <Setter Property="BackgroundColor" Value="#FFF5F5" />
                                        <Setter Property="BorderColor" Value="#E74C3C" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Frame" Binding="{Binding ResultadoStr}" Value="Permitida">
                                        
                                        <Setter Property="BackgroundColor" Value="#A9E6C9" />
                                        <Setter Property="BorderColor" Value="#2ECC71" />
                                    </DataTrigger>
                                </Frame.Triggers>

                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                    <Label Text="{Binding MomentoDeAcceso, StringFormat='ðŸ“… {0:dd/MM/yyyy HH:mm}'}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           Grid.Row="0" />

                                    <Label Text="{Binding Espacio.Titulo, FallbackValue='(Evento desconocido)'}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light='#222', Dark='#fff'}"
                                           Grid.Row="1" />

                                    <Label Text="{Binding CredencialId, StringFormat='Credencial: {0}'}"
                                           FontSize="14"
                                           Grid.Row="2" />

                                    <!-- optional: show EspacioId to verify DB value (remove when ok) -->
                                    <Label Text="{Binding EspacioId, StringFormat='EventoId: {0}'}"
                                           FontSize="12"
                                           TextColor="Gray"
                                           Grid.Row="3" />

                                    <Label Text="{Binding ResultadoStr}"
                                           FontSize="13"
                                           Grid.Row="4"
                                           HorizontalOptions="End">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding ResultadoStr}" Value="Denegar">
                                                <Setter Property="TextColor" Value="#C0392B" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding ResultadoStr}" Value="Permitir">
                                                <Setter Property="TextColor" Value="#145A32" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <views:Navbar Grid.Row="1" />
    </Grid>
</ContentPage>