<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AppNetCredenciales.Views"
             x:Class="AppNetCredenciales.Views.EspacioPerfilView"
             Title="Detalle del Espacio"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="10" Spacing="10">

                <Label Text="{Binding Espacio.Titulo}"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <Label Text="{Binding Espacio.Descripcion}"
                       FontSize="16"
                       TextColor="Gray"/>

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" Margin="0,5">
                    <Label Text="Lugar:" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Espacio.Lugar}" Grid.Column="1" TextColor="Black"/>
                </Grid>

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" Margin="0,5">
                    <Label Text="Fecha:" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Espacio.Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}" Grid.Column="1" TextColor="Black"/>
                </Grid>

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" Margin="0,5">
                    <Label Text="Stock:" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Espacio.Stock}" Grid.Column="1" TextColor="Black"/>
                </Grid>

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" Margin="0,5">
                    <Label Text="Disponible:" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Espacio.Disponible}" Grid.Column="1" TextColor="Black"/>
                </Grid>

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" Margin="0,5">
                    <Label Text="Publicado:" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Espacio.Publicado}" Grid.Column="1" TextColor="Black"/>
                </Grid>

                <BoxView HeightRequest="24" Color="Transparent" />

                <Button Text="Mostrar QR" Clicked="OnShowQRClicked" />

            </VerticalStackLayout>
        </ScrollView>
           <views:Navbar Grid.Row="1" />
    </Grid>
</ContentPage>