<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNetCredenciales.Views.ReaderSpaceSelectionView"
             Title="Seleccionar Espacio">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Frame BackgroundColor="#2196F3" 
                   CornerRadius="12" 
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Lector NFC"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Selecciona el espacio donde activaras el lector"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Informacion del funcionario -->
            <Frame BackgroundColor="#F5F5F5"
                   CornerRadius="8"
                   Padding="15"
                   HasShadow="False">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Funcionario:"
                           FontSize="12"
                           TextColor="Gray"/>
                    <Label Text="{Binding FuncionarioNombre}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de espacios -->
            <Label Text="Espacios Disponibles"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             IsVisible="{Binding IsLoading}"
                             Color="#2196F3"
                             HeightRequest="50"/>

            <CollectionView ItemsSource="{Binding Espacios}"
                          SelectionMode="None"
                          IsVisible="{Binding HasEspacios}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5"
                               Padding="15"
                               BackgroundColor="White"
                               CornerRadius="12"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto,Auto"
                                  ColumnSpacing="10">
                                
                                <!-- Nombre del espacio -->
                                <Label Grid.Row="0" 
                                       Grid.Column="0"
                                       Text="{Binding Nombre}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>

                                <!-- Ubicacion -->
                                <Label Grid.Row="1" 
                                       Grid.Column="0"
                                       Text="{Binding Ubicacion}"
                                       FontSize="14"
                                       TextColor="Gray"/>

                                <!-- Capacidad -->
                                <Label Grid.Row="2" 
                                       Grid.Column="0"
                                       FontSize="12"
                                       TextColor="Gray">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Capacidad: "/>
                                            <Span Text="{Binding Capacidad}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <!-- Boton activar -->
                                <Button Grid.Row="0" 
                                        Grid.RowSpan="3"
                                        Grid.Column="1"
                                        Text="Activar Lector"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="8"
                                        Padding="15,10"
                                        VerticalOptions="Center"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ActivateReaderCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Mensaje cuando no hay espacios -->
            <Frame IsVisible="{Binding HasNoEspacios}"
                   BackgroundColor="#FFF3CD"
                   CornerRadius="8"
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="No hay espacios disponibles"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Contacta al administrador para asignar espacios a tu cuenta"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Boton volver -->
            <Button Text="Volver"
                    BackgroundColor="#757575"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="0,12"
                    Command="{Binding BackCommand}"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
