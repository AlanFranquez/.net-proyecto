<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNetCredenciales.Views.LoginView"
             >

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Login"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="Black"/>

        <Entry Placeholder="Correo electrónico"
               Text="{Binding Email}"
               Keyboard="Email"
               TextColor="Black"
               PlaceholderColor="Gray"/>

        <Entry Placeholder="Contraseña"
               Text="{Binding Password}"
               IsPassword="True"
               TextColor="Black"
               PlaceholderColor="Gray"/>

        <ActivityIndicator IsRunning="{Binding Trabajando}" IsVisible="{Binding Trabajando}"/>

        <Button Text="Ingresar"
                Command="{Binding LoginCommand}"
                BackgroundColor="#007AFF"
                TextColor="White"/>

        <Button Text="Registrarse" Command="{Binding NavigateToRegisterCommand}"/>
        <Button Text="Ver usuarios (debug)"
            Clicked="OnVerUsuariosClicked"
            BackgroundColor="Gray"
            TextColor="White"
            Margin="0,10,0,0" />
        <Button Text="Conectividad" Clicked="chequearConectividad" TextColor="White"/>
        
    </VerticalStackLayout>


</ContentPage>